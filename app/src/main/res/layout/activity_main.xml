<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/output_panel"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/colorOutputScreen"
        android:elevation="12dp"
        android:layout_marginBottom="10dp"
        android:text="1+1=1"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textAlignment="viewEnd"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/h"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="h"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/e"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/c"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/r"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/h"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="r"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/e1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/e"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/e1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/p"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/r"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="p"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/a"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/e1"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/n"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/p"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/o"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/a"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/v"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/n"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/o"
            tools:layout_editor_absoluteY="136dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/h2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:layout_editor_absoluteX="359dp" />

        <TextView
            android:id="@+id/h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="h"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/e2"
            app:layout_constraintTop_toBottomOf="@+id/c2"
            tools:layout_editor_absoluteX="359dp" />

        <TextView
            android:id="@+id/e2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/h2"
            app:layout_constraintBottom_toTopOf="@+id/r2"
            tools:layout_editor_absoluteX="359dp" />

        <TextView
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="r"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/e3"
            app:layout_constraintTop_toBottomOf="@+id/e2"
            tools:layout_editor_absoluteX="359dp" />

        <TextView
            android:id="@+id/e3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/p2"
            app:layout_constraintTop_toBottomOf="@+id/r2"
            tools:layout_editor_absoluteX="359dp" />

        <TextView
            android:id="@+id/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="p"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/a2"
            app:layout_constraintTop_toBottomOf="@+id/e3"
            tools:layout_editor_absoluteX="359dp" />

        <TextView
            android:id="@+id/a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/n2"
            app:layout_constraintTop_toBottomOf="@+id/p2"
            tools:layout_editor_absoluteX="359dp" />

        <TextView
            android:id="@+id/n2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/o2"
            app:layout_constraintTop_toBottomOf="@+id/a2"
            tools:layout_editor_absoluteX="359dp" />

        <TextView
            android:id="@+id/o2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/v2"
            app:layout_constraintTop_toBottomOf="@+id/n2"
            tools:layout_editor_absoluteX="359dp" />

        <TextView
            android:id="@+id/v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/o2"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="359dp" />

        <RelativeLayout
            android:id="@+id/obertka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/number_panel_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfPlate"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfPlate"
                    android:text="4"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfPlate"
                    android:text="7"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_panel_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/number_panel_1"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/number_panel_1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfPlate"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfPlate"
                    android:text="5"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfPlate"
                    android:text="8"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_panel_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/number_panel_2"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/number_panel_2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfPlate"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfPlate"
                    android:text="6"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfPlate"
                    android:text="9"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/math_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/number_panel_3"
                android:layout_alignBottom="@id/under_number_panel"
                android:layout_toRightOf="@id/number_panel_3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfMathAction"
                    android:text="+"
                    android:textAlignment="center"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfMathAction"
                    android:text="-"
                    android:textAlignment="center"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfMathAction"
                    android:text="x"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfMathAction"
                    android:text="/"
                    android:textAlignment="center"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfMathAction"
                    android:text="+/-"
                    android:textAlignment="center"
                    android:textSize="33sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfMathAction"
                    android:text="%"
                    android:textAlignment="center"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfMathAction"
                    android:text="ce"
                    android:textAlignment="center"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfMathAction"
                    android:text="="
                    android:textAlignment="center"
                    android:textSize="35sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/under_number_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_panel_1"
                android:layout_alignLeft="@id/number_panel_1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="202dp"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfPlate"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="50dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="1dp"
                    android:background="@color/colorOfPlate"
                    android:text=","
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>